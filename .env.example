# Authentication Configuration
# Set to 'true' to enable authentication
NEXT_PUBLIC_AUTH_ENABLED=false

# Set to 'true' to enable multi-user mode (requires auth)
NEXT_PUBLIC_MULTI_USER_MODE=false

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# GitHub OAuth (required if auth is enabled)
# Create OAuth app at: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Database Configuration for Production
# Required for Vercel deployment - SQLite doesn't work on serverless
SUPABASE_URL=
SUPABASE_ANON_KEY=